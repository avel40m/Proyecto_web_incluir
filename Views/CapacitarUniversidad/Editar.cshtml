@model Inluirme_Proyecto.Models.Capacitaciones
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Editar</title>
</head>
<body>
    <a href="@Url.Action("Capacitaciones","CapacitarUniversidad",new { id = Model.Universidad_id })" class="nav-link">Volver</a>
    <div> 
        <form action="/CapacitarUniversidad/Editar" method="post" class="m-4">
                <input type="hidden" name="id" value="@Model.id" />
                <input type="hidden" name="Universidad_id" value="@Model.Universidad_id" />

                <div class="form-group">
                    <label class="fw-bold">Ingrese Nombre</label>
                    <input type="text" name="nombre" value="@Model.nombre" class="form-control" required autocomplete="off" />
                </div>

                <div class="form-group">
                    <label class="fw-bold">Ingrese Descripcion</label>
                    <input type="text" name="descripcion" value="@Model.descripcion" class="form-control" required autocomplete="off"/>
                </div>

                <div class="form-group">
                    <label class="fw-bold">Ingrese Fecha</label>
                    <input type="date" name="fecha" value="@Model.fecha" class="form-control" required autocomplete="off"/>
                </div>

                <div class="form-group">
                    <label class="fw-bold">Ingrese Cantidad</label>
                    <input type="text" name="cantidad" value="@Model.cantidad" class="form-control" required autocomplete="off"/>
                </div>

                <input type="submit" value="Modificar" class="btn btn-success" />
            </form>
</div>
</body>
</html>
