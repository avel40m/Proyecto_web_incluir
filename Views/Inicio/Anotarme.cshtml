@model Inluirme_Proyecto.Models.Capacitaciones
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Anotarme</title>
</head>

<style>
    .forms{
        margin-left:25%;
        margin-top:10%;
        padding:3%;
        border:1px black solid;
    }
</style>

<body>


    <a href="@Url.Action("Capacitacion","Inicio")" class="nav-link">Volver al menu</a>
    <div> 
        <form action="/Inicio/Anotarme" method="post" class="col-md-5 forms">
            <h1>CUENTA DE USUARIO</h1>
            <hr />
            <input type="hidden" name="idCapacitacion" value="@Model.id" />
            <div class="form-group">
                <h5>Ingrese su usuario</h5>
                <input type="text" name="usuario" value="" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <h5>Ingrese su contraseña</h5>
                <input type="password" name="clave" value="" class="form-control" autocomplete="off"/>
            </div>
            <br />
            <input type="submit" class="btn btn-success" value="Anotarme" />
        </form>
    </div>
</body>
</html>
